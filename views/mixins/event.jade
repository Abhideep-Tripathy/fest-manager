mixin eventMixin(event, showImage)
    if event.route
        div.hex-container
            a.event-container(class="#{event.category} #{event.type}" href="/events/#{event.route}")
                div.face
                    h3.name= event.name
                if showImage
                    div.image(style="background-image:url('#{event.thumbnail}')")
                div.details
